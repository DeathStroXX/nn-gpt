{
    "apiVersion": "batch/v1",
    "kind": "Job",
    "metadata": {
        "name": "nngpt-train-102"
    },
    "spec": {
        "parallelism": 1,
        "ttlSecondsAfterFinished": 86400,
        "template": {
            "spec": {
                "containers": [
                    {
                        "args": [
                            "pip install git+https://github.com/ABrain-One/nn-dataset --upgrade --extra-index-url https://download.pytorch.org/whl/cu126 && export PYTHONPATH=/a/mm && cd /a/mm/ab/gpt/brute/ga/LLM_guided && python3 -u run_mut_evolution.py"
                        ],
                        "securityContext": {
                            "allowPrivilegeEscalation": false,
                            "runAsUser": 1017,
                            "runAsGroup": 1376
                        },
                        "volumeMounts": [
                            {
                                "mountPath": "/dev/shm",
                                "name": "shm"
                            },
                            {
                                "mountPath": "/a/mm",
                                "name": "v0"
                            },
                            {
                                "mountPath": "/a/mm/data",
                                "name": "v1"
                            }
                        ],
                        "name": "ml",
                        "command": [
                            "/bin/bash",
                            "-c"
                        ],
                        "imagePullPolicy": "Always",
                        "image": "abrainone/ai-linux:cu12.6.3-latest",
                        "resources": {
                            "requests": {
                                "nvidia.com/gpu": 1,
                                "cpu": 8,
                                "memory": "30Gi"
                            },
                            "limits": {
                                "nvidia.com/gpu": 1,
                                "cpu": 64,
                                "memory": "120Gi"
                            }
                        }
                    }
                ],
                "restartPolicy": "Never",
                "volumes": [
                    {
                        "name": "shm",
                        "emptyDir": {
                            "medium": "Memory",
                            "sizeLimit": "16Gi"
                        }
                    },
                    {
                        "name": "v0",
                        "hostPath": {
                            "path": "/shared/ssd/home/b-a-singh/Thesis/nn-gpt",
                            "type": "DirectoryOrCreate"
                        }
                    },
                    {
                        "name": "v1",
                        "hostPath": {
                            "path": "/shared/local/data/a-group-automl/data",
                            "type": "DirectoryOrCreate"
                        }
                    }
                ]
            }
        }
    }
}